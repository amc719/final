//Scene 1 Landing-Main page
//Welcome Screen with Instructions and Start button
//Global Variables
var currentScene;
var finalResponse;
var characterX = 353;
var characterY = 241;
var d = day(); 
var m = month();
var y = year();
var h = hour();
var mi = minute();

//button  -Start and home
var Button = function(config) {
    this.x = config.x || 0;
    this.y = config.y || 0;
    this.width = config.width || 150;
    this.height = config.height || 50;
    this.label = config.label || "Click";
};

//button function - Instructions
var button = function(config) {
    this.x = config.x || 0;
    this.y = config.y || 0;
    this.width = config.width || 125;
    this.height = config.height || 45;
    this.label = config.label || "Click";
};

// button prototype draw function - start and home
Button.prototype.draw = function() {
   
    var c = color(19, 245, 19, 235);
    fill(c);
    var value = alpha(c);  

    fill(108, 184, 70, value);
    rect(this.x, this.y, this.width, this.height, 5);
    fill(13, 12, 13);
    textSize(25);
    textAlign(CENTER, TOP);
    text(this.label, this.x+76, this.y+this.height/4);
};

//instructions
button.prototype.draw = function() {
      var c = color(211, 245, 19, 230);
    fill(c);
    var value = alpha(c);  // Sets "value" to "102"
    fill(190, 222, 47, value);
    rect(this.x, this.y, this.width, this.height, 5);
    fill(13, 12, 13);
    textSize(19);
    textAlign(CENTER, TOP);
    text(this.label, this.x+63, this.y+this.height/4);
};

//Button Prototype mouse function
Button.prototype.isMouseInside = function() {
    return mouseX > this.x &&
           mouseX < (this.x + this.width) &&
           mouseY > this.y &&
           mouseY < (this.y + this.height);
        
};

//Button Prototype mouse function- instructions
button.prototype.isMouseInside = function() {
    return mouseX > this.x &&
           mouseX < (this.x + this.width) &&
           mouseY > this.y &&
           mouseY < (this.y + this.height);
        
};

