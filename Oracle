//Draw Scene 1 function HOME SCREEN
var drawScene1 = function() {
    currentScene = 1;
    background(16, 113, 161);
    stroke(255, 255, 255);
//color gradiant for background
var from = color(15, 161, 141);//from color (22, 200, 227)(left)-color 1
var to = color(64, 95, 135);//to color (27, 41, 145) (right)-color 5
var interA = lerpColor(from, to, 0.33);//Color 2
var interB = lerpColor(from, to, 0.66);//color 3
var interC = lerpColor(from, to, 0.99);//color 4


fill(from);//color 1
rect(0, 0, 105, 400);//rect1/left

fill(interA);//color 2
rect(80, 0, 105, 400);//rect2

fill(interB);//color 3
rect(160, 0, 128, 400);//rect3

fill(interC);//color 4
rect(240, 0, 100, 400);//rect4

fill(to);//color 5
rect(320, 0, 100, 400);//rect 5

  stroke(196, 171, 12);
    strokeWeight(2);
    noFill();
    ellipse(25, 30, 360, 360);//top left
    ellipse(375, 30, 360, 360);//top right
    ellipse(200, 200, 375, 375);//middle
    ellipse(25, 375, 360, 360);//bottom left corner
    ellipse(375, 375, 360, 360);//bottom right

    //Title
    var c = color(9, 78, 148, 200);
    fill(c);
    var value = alpha(c);  
    fill(29, 126, 133, value);
    rect(75, 35, 250, 80);
    fill(237, 223, 237);
    stroke(12, 102, 21);
    textSize(35);
    text("Madam Alicia's", 83, 41, 400, 100);
    textSize(30);
    text("Oracle of Truth", 90, 80, 400, 100);

noStroke();

    //Stars
    var x = -66;
    while (x < 298) {//while loop (:
        
        x+=78; 
        var y = -6;
    while (y < 336) {
        image(getImage("space/star"), x, y, 50, 50);
        y+=111; 
    }
    }
    //Draw Start button
btn2.draw();
//Draw Instructions Button
btn1.draw();
mouseClicked = function() {
    if (btn1.isMouseInside()) {
        drawScene2();
        playSound(getSound("retro/coin"));
    } else if (btn2.isMouseInside()) {
        drawScene3();
        playSound(getSound("rpg/giant-hyah"));
    }
    else if (btn3.isMouseInside()) {
        drawScene1();
        playSound(getSound("retro/coin"));
    }
};

};

mousePressed = function () {
        if (btn4.isMouseInside()) {
        drawScene1();
        }

};

//Main Screen

drawScene1();


