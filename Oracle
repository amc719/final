//drawbitmoji function
var drawBitmoji = function(bitmojiObject) {
  var x = bitmojiObject.x;
  var y = bitmojiObject.y;
  var h = bitmojiObject.h;
  var shirtColor = bitmojiObject.shirtColor;
  var initials = bitmojiObject.initials;
  
  // Manual scaling of each element
  var scaleMultiplier = h / 400;
      
      // HAIR
      noStroke();
      fill(201, 164, 76);
      ellipse(x + 152 * scaleMultiplier, y + 167 * scaleMultiplier, 100 * scaleMultiplier, 280 * scaleMultiplier);
    
      // HEAD
      fill(186, 119, 85);
      ellipse(x + 198 * scaleMultiplier, y + 156 * scaleMultiplier, 158 * scaleMultiplier, 81 * scaleMultiplier);
      rect(x + 170 * scaleMultiplier, y + 220 * scaleMultiplier, 55 * scaleMultiplier, 55 * scaleMultiplier);
    
      // EARRINGS
      fill(242, 237, 237);
      ellipse(x + 261 * scaleMultiplier, y + 169 * scaleMultiplier, 5 * scaleMultiplier, 5 * scaleMultiplier);
      ellipse(x + 134 * scaleMultiplier, y + 169 * scaleMultiplier, 5 * scaleMultiplier, 5 * scaleMultiplier);
    
      // FACE
      fill(204, 128, 90);
      ellipse(x + 198 * scaleMultiplier, y + 150 * scaleMultiplier, 126 * scaleMultiplier, 171 * scaleMultiplier);

    // EYES
    fill(247, 242, 242);
    ellipse(x + 170 * scaleMultiplier, y + 135 * scaleMultiplier, 30 * scaleMultiplier, 20 * scaleMultiplier);
    ellipse(x + 222 * scaleMultiplier, y + 135 * scaleMultiplier, 30 * scaleMultiplier, 20 * scaleMultiplier);
    
    // EYEBROWS
    fill(115, 77, 16);
    arc(x + 170 * scaleMultiplier, y + 120 * scaleMultiplier, 37 * scaleMultiplier, 11 * scaleMultiplier, 180, 356);
    arc(x + 226 * scaleMultiplier, y + 120 * scaleMultiplier, 37 * scaleMultiplier, 11 * scaleMultiplier, 180, 356);
    
    // EYE COLOR
    fill(16, 116, 199);
    ellipse(x + 170 * scaleMultiplier, y + 135 * scaleMultiplier, 17 * scaleMultiplier, 18 * scaleMultiplier);
    ellipse(x + 222 * scaleMultiplier, y + 135 * scaleMultiplier, 17 * scaleMultiplier, 18 * scaleMultiplier);
    
    // EYELASHES
    fill(38, 35, 35);
    arc(x + 166 * scaleMultiplier, y + 129 * scaleMultiplier, 29 * scaleMultiplier, 9 * scaleMultiplier, 180, 360);
    arc(x + 226 * scaleMultiplier, y + 129 * scaleMultiplier, 30 * scaleMultiplier, 9 * scaleMultiplier, 180, 360);
    arc(x + 171 * scaleMultiplier, y + 143 * scaleMultiplier, 23 * scaleMultiplier, -7 * scaleMultiplier, 180, 360);
    arc(x + 226 * scaleMultiplier, y + 143 * scaleMultiplier, 23 * scaleMultiplier, -7 * scaleMultiplier, 180, 360);
    
    // PUPILS
    fill(13, 1, 1);
    ellipse(x + 170 * scaleMultiplier, y + 135 * scaleMultiplier, 8 * scaleMultiplier, 8 * scaleMultiplier);
    ellipse(x + 222 * scaleMultiplier, y + 135 * scaleMultiplier, 8 * scaleMultiplier, 8 * scaleMultiplier);
    
    // HIGHLIGHTS
    fill(250, 240, 240);
    ellipse(x + 165 * scaleMultiplier, y + 132 * scaleMultiplier, 8 * scaleMultiplier, 4 * scaleMultiplier);
    ellipse(x + 218 * scaleMultiplier, y + 132 * scaleMultiplier, 8 * scaleMultiplier, 4 * scaleMultiplier);
    
    // MOUTH-LIPS
    fill(240, 91, 91);
    arc(x + 198 * scaleMultiplier, y + 191 * scaleMultiplier, 45 * scaleMultiplier, 32 * scaleMultiplier, -8, 183);
    
    // TEETH
    fill(242, 242, 242);
    ellipse(x + 198 * scaleMultiplier, y + 197 * scaleMultiplier, 31 * scaleMultiplier, -4 * scaleMultiplier);
    
    // NOSE
    fill(166, 113, 87);
    ellipse(x + 199 * scaleMultiplier, y + 173 * scaleMultiplier, 28 * scaleMultiplier, 7 * scaleMultiplier);
    ellipse(x + 202 * scaleMultiplier, y + 155 * scaleMultiplier, 3 * scaleMultiplier, 23 * scaleMultiplier);
    
    // BODY
    noStroke();
    fill(186, 119, 85);
    ellipse(x + 201 * scaleMultiplier, y + 329 * scaleMultiplier, 238 * scaleMultiplier, 148 * scaleMultiplier);
    
    // SHIRT
    fill(shirtColor);
    quad(
      x + 351 * scaleMultiplier,
      y + 400 * scaleMultiplier,
      x + 46 * scaleMultiplier,
      y + 400 * scaleMultiplier,
      x + 81 * scaleMultiplier,
      y + 309 * scaleMultiplier,
      x + 319 * scaleMultiplier,
      y + 309 * scaleMultiplier
    );
    
    if (initials) {
      // Draw initials on the shirt
      fill(5, 65, 133);
      textSize(50 * scaleMultiplier);
      text("AMC", x + 144 * scaleMultiplier, y + 344 * scaleMultiplier);
    }
    
    // UPPER BODY
    fill(186, 119, 85);
    ellipse(x + 200 * scaleMultiplier, y + 299 * scaleMultiplier, 54 * scaleMultiplier, 72 * scaleMultiplier);
    
    // ARMS
    stroke(0, 0, 0);
    line(x + 275 * scaleMultiplier, y + 344 * scaleMultiplier, x + 294 * scaleMultiplier, y + 400 * scaleMultiplier);
    line(x + 120 * scaleMultiplier, y + 344 * scaleMultiplier, x + 101 * scaleMultiplier, y + 400 * scaleMultiplier);
    noStroke();
    fill(255, 255, 255);
    triangle(x + 104 * scaleMultiplier, y + 400 * scaleMultiplier, x + 123 * scaleMultiplier, y + 346 * scaleMultiplier, x + 130 * scaleMultiplier, y + 400 * scaleMultiplier);
    triangle(x + 291 * scaleMultiplier, y + 400 * scaleMultiplier, x + 271 * scaleMultiplier, y + 346 * scaleMultiplier, x + 265 * scaleMultiplier, y + 400 * scaleMultiplier);
    
    // TANK
    stroke(76, 201, 22);
    strokeWeight(10);
    line(x + 255 * scaleMultiplier, y + 309 * scaleMultiplier, x + 254 * scaleMultiplier, y + 267 * scaleMultiplier);
    line(x + 136 * scaleMultiplier, y + 309 * scaleMultiplier, x + 136 * scaleMultiplier, y + 270 * scaleMultiplier);
    
    // HAIR STRANDS
    noStroke();
    fill(209, 172, 71);
    triangle(x + 159 * scaleMultiplier, y + 34 * scaleMultiplier, x + 123 * scaleMultiplier, y + 268 * scaleMultiplier, x + 152 * scaleMultiplier, y + 220 * scaleMultiplier);
    triangle(x + 154 * scaleMultiplier, y + 51 * scaleMultiplier, x + 88 * scaleMultiplier, y + 221 * scaleMultiplier, x + 129 * scaleMultiplier, y + 179 * scaleMultiplier);
    triangle(x + 252 * scaleMultiplier, y + 81 * scaleMultiplier, x + 218 * scaleMultiplier, y + 92 * scaleMultiplier, x + 288 * scaleMultiplier, y + 187 * scaleMultiplier);
    triangle(x + 238 * scaleMultiplier, y + 72 * scaleMultiplier, x + 262 * scaleMultiplier, y + 157 * scaleMultiplier, x + 243 * scaleMultiplier, y + 221 * scaleMultiplier);
    
    // PONY
    ellipse(x + 195 * scaleMultiplier, y + 79 * scaleMultiplier, -113 * h / 400, 41 * h / 400);
    rect(x + 149 * scaleMultiplier, y + 48 * scaleMultiplier, 46 * h / 400, 41 * h / 400);
    
    // HAIR ELASTIC
    stroke(43, 145, 14);
    strokeWeight(3);
    fill(39, 94, 9);
    line(x + 151 * scaleMultiplier, y + 62 * scaleMultiplier, x + 195 * scaleMultiplier, y + 57 * scaleMultiplier);
    
    // NECKLACE
    noFill();
    strokeWeight(4);
    stroke(201, 133, 38);
    arc(x + 197 * scaleMultiplier, y + 271 * scaleMultiplier, 82 * h / 400, -39 * h / 400, 152, 396);
};

