//Scene 11 (From 6) Org/Intro/Out - FINAL
var drawScene10 = function() {
    currentScene = 10;// SCENE 10
  background(7, 113, 189);//Background color
   textSize(30);
  text("Do you consider yourself:", 10, 10, 400, 100);//Question 2
  fill(43, 77, 227);//rect color choice 1
  rect(1, 100, 198, 200);//choice 1 selection
  fill(255, 255, 255);//text color 1
  text("Sporty", 25, 170, 150, 200);//text choice 1
  fill(64, 240, 29);//rect choice 2 color
  rect(200, 100, 198, 200);//choice 2- shy selection
  fill(18, 18, 18);//text color- choice 2
  text("Artistic", 200, 170, 200, 200);//text- choice 2
    
    //Selection
  mouseClicked = function() {
    if (currentScene === 10 && mouseX > 1 && mouseX < 199 && mouseY > 100 && mouseY < 300) {
        drawResult1();   
        playSound(getSound("rpg/giant-yah"));
      } else if (currentScene === 10 && mouseX > 200 && mouseX < 398 && mouseY > 100 && mouseY < 300) {
   drawResult2();   
   playSound(getSound("rpg/giant-yah"));
      }
};
};

